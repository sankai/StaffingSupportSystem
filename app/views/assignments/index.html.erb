<% @assignments.each do |assignment| %>
  <tr>
    <td><%= assignment.from %></td>
    <td><%= assignment.to %></td>
    <td><%= assignment.roleComment %></td>
    <td><%= assignment.status %></td>
    <td><%= assignment.num_engineer %></td>
    <td><%= link_to '表示', assignment %></td>
    <td><%= link_to '編集', edit_assignment_path(assignment) %></td>
    <td><%= link_to '削除', assignment, method: :delete, data: { confirm: '削除してよろしいですか？' } %></td>
  </tr>
<% end %>
</table>

